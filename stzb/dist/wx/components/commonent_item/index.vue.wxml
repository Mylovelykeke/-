<template name="5c5e5f1c">
  <view class="_div data-v-355ca06a content  skeleton-radius">
    <view class="_div data-v-355ca06a common-content" wx:key="index" key="{{index}}" wx:for="{{comment}}" wx:for-index="index" wx:for-item="v">
      <view class="_div data-v-355ca06a">
        <view class="_div data-v-355ca06a common-author">
          <image src="{{headeImg}}" alt class="_img data-v-355ca06a"></image>
        </view>
        <view class="_div data-v-355ca06a common-main">
          <view class="_div data-v-355ca06a"><label class="_span data-v-355ca06a authorname" bindtap="handleProxy" data-eventid="{{'0_'+index}}" data-comkey="{{$k}}">{{v.name}}</label>
            <view class="_i data-v-355ca06a iconfont icon-jiantou" wx:if="{{v.replyUserName}}"></view> <label bindtap="handleProxy" class="_span data-v-355ca06a otherone" data-eventid="{{'1_'+index}}" data-comkey="{{$k}}">{{v.replyUserName || ''}}</label>
          </view>
          <view class="_div data-v-355ca06a common-time"><label class="_span data-v-355ca06a">{{v.createAt}}</label></view>
          <view class="_div data-v-355ca06a content" bindtap="handleProxy" data-eventid="{{'2_'+index}}" data-comkey="{{$k}}">
            {{v.content}}
          </view>
          <view class="_div data-v-355ca06a child-bg" wx:if="{{v.children}}">
            <view class="_div data-v-355ca06a common-content common-content-child" wx:key="key" key="{{key}}" hidden="{{!(key<2)}}" wx:for="{{v.children[0]}}" wx:for-index="key" wx:for-item="val">
              <view wx:if="{{key<2}}" class="_div data-v-355ca06a">
                <view class="_div data-v-355ca06a common-author">
                  <image src="{{headeImg}}" alt class="_img data-v-355ca06a"></image>
                </view>
                <view class="_div data-v-355ca06a common-main">
                  <view class="_div data-v-355ca06a"><label class="_span data-v-355ca06a authorname" bindtap="handleProxy" data-eventid="{{'3_'+index+'-'+key}}" data-comkey="{{$k}}">{{val.name}}</label>
                    <view class="_i data-v-355ca06a iconfont icon-jiantou"></view> <label class="_span data-v-355ca06a otherone" bindtap="handleProxy" data-eventid="{{'4_'+index+'-'+key}}" data-comkey="{{$k}}">{{val.replyUserName}}</label>
                  </view>
                  <view class="_div data-v-355ca06a common-time"><label class="_span data-v-355ca06a">{{val.createAt}}</label></view>
                  <view class="_div data-v-355ca06a content">
                    {{val.content}}
                  </view>
                </view>
                <view class="_div data-v-355ca06a common-like"><label class="_span data-v-355ca06a">{{likenum}}</label>
                  <view class="_i data-v-355ca06a iconfont icon-like"></view>
                </view>
              </view>
            </view>
            <view class="_div data-v-355ca06a commentes" wx:if="{{v.children[0]&&v.children[0].length>2}}" bindtap="handleProxy" data-eventid="{{'5_'+index}}" data-comkey="{{$k}}"> 查看全部{{v.children&&v.children[1]}}评论 <view class="_i data-v-355ca06a iconfont icon-youjiantou"></view>
            </view>
          </view>
        </view>
        <view class="_div data-v-355ca06a common-like"><label class="_span data-v-355ca06a">{{likenum}}</label>
          <view class="_i data-v-355ca06a iconfont icon-like"></view>
        </view>
      </view>
    </view>
  </view>
</template>